{% extends 'base.html.twig' %}

{% block body %}
    <h1>Materials list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Imagenes</th>
                <th>Fechapublicacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td><a href="{{ path('material_show', { 'id': material.id }) }}">{{ material.id }}</a></td>
                <td>{{ material.descripcion }}</td>
                <td>{{ material.precio }}</td>
                <td>{{ material.imagenes }}</td>
                <td>{% if material.fechaPublicacion %}{{ material.fechaPublicacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('material_show', { 'id': material.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('material_edit', { 'id': material.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('material_new') }}">Create a new material</a>
        </li>
    </ul>
{% endblock %}
