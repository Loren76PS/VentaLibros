{% extends 'FOSUserBundle::layout.html.twig' %}

{% block fos_user_content %}
    <h1>Material</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ material.descripcion }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ material.precio }}</td>
            </tr>
            <tr>
                <th>Imagenes</th>
                <td>{{ material.imagenes }}</td>
            </tr>
            <tr>
                <th>Fechapublicacion</th>
                <td>{% if material.fechaPublicacion %}{{ material.fechaPublicacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ material.titulo }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ material.isbn }}</td>
            </tr>
            <tr>
                <th>Temas</th>
                <td>{{ material.temas }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('material_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('material_edit', { 'id': material.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
